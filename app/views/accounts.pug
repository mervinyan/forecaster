                    div.row
                        div.col-md-12
                            div.btn-toolbar(role="toolbar")
                                div.btn-group.btn-group-sm.dropdown(role="group")                    
                                    a.btn.btn-default.dropdown-toggle(data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false") 
                                        i.fa.fa-plus
                                        | 
                                        | Add Account
                                        | 
                                        span.caret
                                    ul.dropdown-menu
