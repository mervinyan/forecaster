block content
    div.row
        div.col-md-12
            ol.breadcrumb
                li
                    | Account Summary
    div.row
        div.col-md-3
            
        div.col-md-9
            div.panel.panel-default
                div.panel-heading
                    div.btn-toolbar(role="toolbar")
                        div.btn-group(role="group")                    
                            a.btn.btn-default(href="#" role="button") 
                                i.fa.fa-plus
                                | 
                                | Add Account
                        div.btn-group.pull-right(role="group")
                            a.btn.btn-default
                                i.fa.fa-calendar
                                | 
                                | Today
                            div.btn-group(role="group")   
                                button#months.btn.btn-default.dropdown-toggle.form-control(type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true")
                                    | June
                                    | 
                                    span.caret
                                ul.dropdown-menu(aria-labelledby="months")
                                    each val in ['January', 'Febuary', 'March', 'April', 'May', 'June', 'July', 'September', 'October', 'November', 'December']
                                        li
                                            a()
                                                | #{val}
                            div.btn-group(role="group")   
                                button#years.btn.btn-default.dropdown-toggle.form-control(type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true")
                                    | 2016
                                    | 
                                    span.caret
                                ul.dropdown-menu(aria-labelledby="years")
                                    each val in ['2016', '2015', '2014']
